{% extends 'Admin/admin.base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Profile
            </h1>
            <img src="\images\{{ photo }}" class="img-thumbnail" alt="...">
            <form action="" method="post" class="form-horizontal">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="" class="control-label">Avatar</label>
                            <input type="file" name="user_image" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label for="first_name" class="control-label">First Name</label>
                            <input type="text" name="first_name" class="form-control" value="{{ last_name }}">
                        </div>
                        <div class="col-md-3">
                            <label for="last_name" class="control-label">Last Name</label>
                            <input type="text" name="last_name" class="form-control" value=" {{ first_name }} ">
                        </div>
                        <div class="col-md-3">
                            <label for="username" class="control-label">Username</label>
                            <input type="text" name="username" class="form-control" value="{{ username }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="password" class="control-label">Password</label>
                            <input type="text" name="password" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label for="email" class="control-label">Email</label>
                            <input type="text" name="email" class="form-control" value="{{ email }}">
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <input type="submit" name="update" value="Add User" class="btn btn-primary btn-lg pull-right">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
